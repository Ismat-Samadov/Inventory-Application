<%- include('layout') %>

<h1><%= title %></h1>

<h3><%= product.name %></h3>

<h3>Are you sure you want to delete the product?</h3>

<form method="POST">
    <input type="hidden" name="product_id" value="<%= product._id %>">
    <button type="submit" class="delete">Delete</button>
</form>

<button><a href="<%= product.url %>">Cancel</a></button>
